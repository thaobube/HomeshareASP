@model HomeshareASP.Models.LoginModel
<!-- banner -->
<div class="inside-banner">
    <div class="container">
        <span class="pull-right"><a href="#">Home</a> / Log In</span>
        <h2>Log In</h2>
    </div>
</div>
<!-- banner -->


<div class="container">
    <div class="spacer">
        <div class="row">
            <div class="col-sm-6 login">
                <h4>Login</h4>
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="sr-only" for="exampleInputEmail2">Login</label>
                        <input type="text" name="Login" class="form-control" id="exampleInputEmail2" placeholder="Enter username" required>
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="exampleInputPassword2">Password</label>
                        <input type="password" name="Password" class="form-control" id="exampleInputPassword2" placeholder="Password" required>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Remember me
                        </label>
                    </div>
                    <button type="submit" class="btn btn-success">Sign in</button>
                    @if (ViewBag.ErrorMessage != null)
                    {
                        @:<div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                    }
                </form>
            </div>
            <div class="col-sm-6">
                <h4>New User Sign Up</h4>
                <p>Join today and get updated with all the homesharings happening around.</p>
                <button type="submit" class="btn btn-info" onclick="window.location.href='/Account/Signup'">Sign Up Now</button>
            </div>

        </div>
    </div>
</div>