@model HomeshareASP.Models.HomeViewModel

@section MoreCss
{
    <style>
        /* Content elements */
        .bg-img-1 {
            background-image: url(../../..@Model.FeaturedBannerBien[0].Photo);
            /*background-image: url(../../..10/20.jpg);*/
        }

        .bg-img-2 {
            background-image: url(../../..@Model.FeaturedBannerBien[1].Photo);
        }

        .bg-img-3 {
            background-image: url(../../..@Model.FeaturedBannerBien[2].Photo);
        }

        .bg-img-4 {
            background-image: url(../../..@Model.FeaturedBannerBien[3].Photo);
        }

        .bg-img-5 {
            background-image: url(../../..@Model.FeaturedBannerBien[4].Photo);
        }

        /* Animations for content elements */
    </style>
}
    <div class="">
        <div id="slider" class="sl-slider-wrapper">
            <div class="sl-slider">
                @for (int i = 0; i < Model.FeaturedBannerBien.Count; i++)
                {
                    <div class="sl-slide" data-orientation="horizontal" data-slice1-rotation="-25" data-slice2-rotation="-25" data-slice1-scale="2" data-slice2-scale="2">
                        <div class="sl-slide-inner">
                            <div class="bg-img bg-img-@(i+1)"></div>
                            <h2><a href="#">@Model.FeaturedBannerBien[i].Titre</a></h2>
                            <blockquote>
                                <p class="location"><span class="glyphicon glyphicon-map-marker"></span>@Model.FeaturedBannerBien[i].Numero @Model.FeaturedBannerBien[i].Rue - @Model.FeaturedBannerBien[i].CodePostal, @Model.FeaturedBannerBien[i].Ville</p>
                                <p>@Model.FeaturedBannerBien[i].DescCourte</p>
                                <a href="@Url.Action("Homedetail", "Home", new { id = Model.FeaturedBannerBien[i].IdBien })" style="color:white;"><cite>TRADE ME</cite></a>
                            </blockquote>
                        </div>
                    </div>
                }                
            </div>
            <nav id="nav-dots" class="nav-dots">
                <span class="nav-dot-current"></span>
                <span></span>
                <span></span>
                <span></span>
                <span></span>
            </nav>
        </div>
    </div>



    <div class="banner-search">
        <div class="container">
            <h3>Search by Title</h3>
            <div class="searchbar">
                <div class="row">
                    <div class="col-lg-6 col-sm-6">
                        <form action="/Home/Homesharing" method="get" class="search-trans-form">
                            <input class="form-control" id="SearchString" name="SearchString" type="text" placeholder="Search Title..." required="">
                            <button class="btn btn-primary" type="submit">Find Now</button>
                        </form>


                    </div>
                    <div class="col-lg-5 col-lg-offset-1 col-sm-6 ">
                        <p>Join now and get updated with all the properties deals.</p>
                        <button class="btn btn-info"><a href="/Account/Login">Login</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="properties-listing spacer">
            <h2>The Best Homesharings</h2>
            <div id="owl-example" class="owl-carousel">
                @foreach (HomeshareASP.Models.BienModel item in Model.BestBien)
                {
                    <div class="properties">
                        <div class="image-holder">
                            <img src="@item.Photo" class="img-responsive" alt="properties" />
                        </div>
                        <h4><a href="property-detail.php">@item.Titre</a></h4>
                        <p class="price">For @item.NombrePerson peoples</p>
                        <div class="listing-detail">@item.DescCourte</div>
                        <a class="btn btn-primary" href="@Url.Action("Homedetail", "Home", new { id = item.IdBien })">View Details</a>
                    </div>
                }                
            </div>
        </div>

        <div class="spacer">
            <div class="row">
                <div class="col-lg-6 col-sm-9 recent-view">
                    <h3>About Us</h3>
                    <p>The standard chunk of Lorem Ipsum used since the 1500s is reproduced below for those interested. Sections 1.10.32 and 1.10.33 from "de Finibus Bonorum et Malorum" by Cicero are also reproduced in their exact original form, accompanied by English versions from the 1914 translation by H. Rackham.<br><a href="/Home/About">Learn More</a></p>

                </div>
                <div class="col-lg-5 col-lg-offset-1 col-sm-3 recommended">
                    <h3>The newest Homesharing</h3>
                    <div id="myCarousel" class="carousel slide">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1" class=""></li>
                            <li data-target="#myCarousel" data-slide-to="2" class=""></li>
                            <li data-target="#myCarousel" data-slide-to="3" class=""></li>
                        </ol>
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.FiveNewestBien.Count; i++)
                            {
                                string myClass = "item";
                                if (i == 0)
                                {
                                    myClass = "item active";
                                }
                                <div class="@myClass">
                                    <div class="row">
                                        <div class="col-lg-4"><img src="@Model.FiveNewestBien[i].Photo" class="img-responsive" alt="properties" /></div>
                                        <div class="col-lg-8">
                                            <h5><a href="property-detail.php">@Model.FiveNewestBien[i].Titre</a></h5>
                                            <p class="price">@Model.FiveNewestBien[i].Ville</p>
                                            <a href="@Url.Action("Homedetail", "Home", new { id = Model.FiveNewestBien[i].IdBien })" class="more">More Detail</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>